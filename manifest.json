{
  "name": "Meme Generator",
  "manifest_version": 3,
  "version": "1.0",
  "description": "A meme Generator leverages on API.",
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png", 
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["content-script.js"]
    }
  ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Meme Generator"
    }
}